<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#6c8b1b" />

            <stroke android:width="1dp" android:color="#57730e" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_checked="true"><shape>
            <gradient android:angle="270" android:endColor="#f3ae1b" android:startColor="#bb6008" />

            <stroke android:width="1dp" android:color="#f3ae1b" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
     <item android:state_checked="false"><shape>
            <gradient android:angle="270" android:endColor="#57730e" android:startColor="#6c8b1b" />

            <stroke android:width="1dp" android:color="#57730e" />

            <corners android:radius="4dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#57730e" android:startColor="#6c8b1b" />

            <stroke android:width="1dp" android:color="#57730e" />

            <corners android:radius="4dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
</selector>