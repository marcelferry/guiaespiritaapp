<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <include
        android:id="@+id/header"
        layout="@layout/home_title_bar" />
    
    <LinearLayout
        android:id="@+id/adMob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true" />
    
    <LinearLayout
        android:id="@+id/ControlButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20sp" 
        android:layout_above="@id/adMob">

        <Button
            android:id="@+id/OkDialog"
            style="@style/ButtonTextMedioWrap"
            android:background="@drawable/btn_gray"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/CancelDialog"
            style="@style/ButtonTextMedioWrap"
            android:background="@drawable/btn_gray"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/cancel" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ContactScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_above="@id/ControlButtons"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="vertical" 
            android:padding="10dp">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorners_white" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/lbTelefone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefone:" >
                    </TextView>

                    <org.jredfoot.sophielib.view.PhoneEditText
                        android:id="@+id/txt_telefone"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Telefone..."
                        android:inputType="phone"
                        android:text=""
                        android:textSize="14sp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="#cccccc" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/lbEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail" >
                    </TextView>

                    <EditText
                        android:id="@+id/txt_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Informe aqui o seu E-Mail..."
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:textSize="14sp" >
                    </EditText>
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="#cccccc" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/lbSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Site:" >
                    </TextView>

                    <EditText
                        android:id="@+id/txt_site"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Informe aqui o seu Site..."
                        android:inputType="textUri"
                        android:text=""
                        android:textSize="14sp" >
                    </EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>