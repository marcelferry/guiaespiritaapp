<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <include
        android:id="@+id/header"
        layout="@layout/home_title_bar" />

    <LinearLayout
        android:id="@+id/ControlButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20sp" >

        <Button
            android:id="@+id/OkDialog"
            style="@style/ButtonTextMedioWrap"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/CancelDialog"
            style="@style/ButtonTextMedioWrap"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:text="@android:string/cancel" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ContactScroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header" 
        android:layout_above="@id/ControlButtons">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="vertical"
            android:padding="10dp" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorners_white" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/lbInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info:" >
                    </TextView>
                 </TableRow>
                    
				<TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >
                    <EditText
                        android:id="@+id/txt_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         android:layout_weight="1"
                        android:gravity="top"
                        android:hint="Informações..."
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:text=""
                        android:textSize="14sp" >
                    </EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>